{
  "mcpServers": {
    "nixos": {
      "command": "uvx",
      "args": ["mcp-nixos"]
    },
    "apple-mcp": {
      "command": "bunx",
      "args": ["@dhravya/apple-mcp@latest"]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "context7": {
      "command": "bunx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "mcp-mermaid": {
      "command": "bunx",
      "args": [
        "-y",
        "mcp-mermaid"
      ]
    },
    "tavily-mcp": {
      "command": "bunx",
      "args": ["-y", "tavily-mcp"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    },
    "@mcp-get-community/server-curl": {
      "command": "bunx",
      "args": ["-y", "@mcp-get-community/server-curl"]
    },
    "github": {
      "command": "bunx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_LLM_PAT}"
      }
    },
    "interactive": {
      "command": "bunx",
      "args": ["-y", "interactive-mcp"]
    },
    "sequential-thinking": {
      "command": "bunx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ]
    }
  }
}
